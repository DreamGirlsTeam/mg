{% extends 'base.html.twig' %}

{% block body %}
    <div class="page-header">
        <div class="logo-position">
            <img src="{{ asset('images/logo.png') }}"/>
        </div>
        <h1 class="text-center">Редагування медичного персоналу</h1>
        <div class="logout-button">
            <a href="{{ path('logout') }}" class="btn btn-default btn-lg">Вихід</a>
        </div>
    </div>
    <div class="col-md-6 col-md-offset-3">
        <div class="container">
            <div class="col-md-4">
                {{ form_start(edit_form) }}
                    {{ form_widget(edit_form) }}
                    <input type="submit" value="Редагувати" class="btn btn-success"/>
                {{ form_end(edit_form) }}
                <div class="col-md-4">
                    <ul class="list-inline">
                        <li class="row top-buffer">
                            <a href="{{ path('admin_index') }}" class="btn btn-warning">Назад до списку</a>
                        </li>
                        <li class="row top-buffer">
                            {{ form_start(delete_form) }}
                                <input type="submit" value="Видалити" class="btn btn-danger">
                            {{ form_end(delete_form) }}
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
