{% extends 'base.html.twig' %}

{% block body %}
    {% include 'header.html.twig' %}
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                <div class="row">
                    <div class="col-md-8 col-md-offset-2">
                        <div class="panel panel-default">
                            <div class="panel-heading"><i class="fa fa-pencil-square-o fa-3x"></i></div>
                            <div class="panel-body">
                                {{ form_start(edit_form, {'attr': {'novalidate': 'novalidate'}}) }}
                                {{ form_widget(edit_form) }}
                               <div class="text-center">
                                   <input type="submit" value="Редагувати" class="btn btn-success"/>
                               </div>
                                {{ form_end(edit_form) }}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="text-center">
            <ul class="list-group">
                <li>
                    <a href="{{ path('admin_index') }}" class="btn btn-warning">Назад до списку</a>
                </li>
                <li class="row top-buffer">
                    {{ form_start(delete_form) }}
                    <input type="submit" value="Видалити" class="btn btn-danger">
                    {{ form_end(delete_form) }}
                </li>
            </ul>
        </div>
{% endblock %}
