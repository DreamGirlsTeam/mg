{% extends 'base.html.twig' %}

{% block body %}
    <div class="page-header">
        <div class="logo-position">
            <img src="{{ asset('images/logo.png') }}"/>
        </div>
        <h1 class="text-header">Редагування медичного персоналу</h1>

        <div class="logout-button">
            <a href="{{ path('logout') }}" class="btn btn-default btn-lg">Вихід</a>
        </div>
    </div>
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                <div class="row">
                    <div class="col-md-8 col-md-offset-2">
                        <div class="panel panel-default">
                            <div class="panel-heading"><i class="fa fa-stethoscope fa-3x"></i></div>
                            <div class="panel-body">
                                {{ form_start(edit_form, {'attr': {'novalidate': 'novalidate'}}) }}
                                {{ form_widget(edit_form) }}
                                <input type="submit" value="Редагувати" class="btn btn-success"/>
                                {{ form_end(edit_form) }}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <ul class="list-inline">
                <li class="row top-buffer">
                    <a href="{{ path('admin_index') }}" class="btn btn-warning">Назад до списку</a>
                </li>
                <li class="row top-buffer">
                    {{ form_start(delete_form) }}
                    <input type="submit" value="Видалити" class="btn btn-danger">
                    {{ form_end(delete_form) }}
                </li>
            </ul>
        </div>
    </div>
{% endblock %}
