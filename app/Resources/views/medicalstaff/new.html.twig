{% extends 'base.html.twig' %}

{% block body %}
    {% include 'header.html.twig' %}
    {% include 'BraincraftedBootstrapBundle::flash.html.twig' %}
    {% form_theme form 'bootstrap_3_layout.html.twig' %}
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                <div class="row">
                    <div class="col-md-8 col-md-offset-2">
                        <div class="panel panel-default">
                            <div class="panel-heading"><img src="{{ asset('images/doc_reg.png') }}"></div>
                            <div class="panel-body">
                                {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
                                {{ form_widget(form, {'attr': {'novalidate': 'novalidate'}}) }}
                                <input type="submit" value="Створити" class="btn btn-success"/>
                                {{ form_end(form) }}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="text-center">
            <ul class="list-group">
                <li>
                    <a href="{{ path('admin_index') }}" class="btn btn-danger">Назад до списку</a>
                </li>
            </ul>
        </div>
    </div>
{% endblock %}
