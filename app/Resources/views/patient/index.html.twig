{% extends 'base.html.twig' %}

{% block body %}
    <h1>Patient list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Number</th>
                <th>Work</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for patient in patients %}
            <tr>
                <td><a href="{{ path('reception_schedule_show', { 'id': patient.id }) }}">{{ patient.id }}</a></td>
                <td>{{ patient.number }}</td>
                <td>{{ patient.work }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('reception_schedule_show', { 'id': patient.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('reception_schedule_edit', { 'id': patient.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('reception_schedule_new') }}">Create a new entry</a>
        </li>
    </ul>
{% endblock %}
