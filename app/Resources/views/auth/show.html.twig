{% extends 'base.html.twig' %}

{% block body %}
    <h1>Auth</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ auth.id }}</td>
            </tr>
            <tr>
                <th>Actorid</th>
                <td>{{ auth.actorId }}</td>
            </tr>
            <tr>
                <th>Username</th>
                <td>{{ auth.username }}</td>
            </tr>
            <tr>
                <th>Password</th>
                <td>{{ auth.password }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('auth_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('auth_edit', { 'id': auth.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
