{% extends 'base.html.twig' %}
{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('bundles/framework/css/auth.css') }}"/>

    {#<link rel="stylesheet" href="{{ asset('bundles/framework/css/validationEngine.jquery.css') }}"/>#}
{% endblock %}
{% block body %}
<div class="logo-position">
    <img src="{{ asset('images/title1.png') }}"/>
</div>
<div class="page-header">
    <h2 class="text-center">Авторизація</h2>
</div>
{% form_theme form 'bootstrap_3_layout.html.twig' %}
<div class="container-fluid">
    <div class="row">
        <div class="col-md-4 col-md-offset-4">
            <div class="row">
                <div class="col-md-8 col-md-offset-2">
                    <div class="panel panel-default">
                        <div class="panel-heading"><i class="fa fa-user-md fa-4x"> </i></div>
                        <div class="panel-body">
                            {{ form_start(form, {'attr' : {'novalidate' : 'true'}}) }}
                            {{ form_widget(form) }}
                            {{ error }}
                            {{ form_end(form) }}
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
    {% block javascripts %}
        {{ parent() }}

    {% endblock %}

    {% endblock %}