{% extends 'base.html.twig' %}
{% block stylesheets %}
    <link href="{{ asset('/bundles/framework/css/doctor.css') }}" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.datatables.net/1.10.11/css/jquery.dataTables.min.css"/>
{% endblock %}
{% block head %}
    {{ parent() }}
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <nav class="navbar navbar-default navbar-fixed-top">
        <div class="container">
            <img src="{{ asset('images/logo.png') }}"/>
        </div>
    </nav>
{% endblock %}

{% block body %}

    <div class="container-fluid tbl">
        <div class="row voffset2">
            <div class="col-md-4 col-md-offset-3">
                <div class="row">
                    <div class="col-md-8 col-md-offset-1">
                        <table class="table table-condensed table-hover doc_reg_info">
                            <thead>
                            <tr class="info">
                                <th>Firstname</th>
                                <th>Lastname</th>
                                <th>Patronymic</th>
                                <th>Phone</th>
                                <th>Actions</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for regInfo in regInfos %}
                                <tr>
                                    <td>{{ regInfo.firstName }}</td>
                                    <td>{{ regInfo.lastName }}</td>
                                    <td>{{ regInfo.patronymic }}</td>
                                    <td>{{ regInfo.phone }}</td>
                                    <td>
                                        <ul>
                                            <li>
                                                <a href="{{ path('reception_show', { 'actorId': regInfo.actorId.id }) }}">Card</a>
                                            </li>
                                        </ul>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
    {% block javascripts %}
        {{ parent() }}
        <script src="https://cdn.datatables.net/1.10.11/js/jquery.dataTables.min.js"></script>
        <script>
            // $('.admin').DataTable();
            $('.doc_reg_info').DataTable({
                responsive: true
            });
        </script>
    {% endblock %}
