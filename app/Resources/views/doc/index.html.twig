{% extends 'base.html.twig' %}
{% block stylesheets %}
    <link href="{{ asset('/bundles/framework/css/doctor.css') }}" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.datatables.net/1.10.11/css/jquery.dataTables.min.css"/>
{% endblock %}

{% block body %}
    {% include 'doc/header.html.twig' %}
    <div class="col-md-4 col-md-offset-3">
        <div class="row">
            <div class="col-md-8 col-md-offset-1">
                <table class="table table-condensed table-hover doc_reg_info">
                    <thead>
                    <tr class="info">
                        <th>Ім'я</th>
                        <th>Прізвище</th>
                        <th>По-батькові</th>
                        <th>Телефон</th>
                        <th>Дії</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for regInfo in regInfos %}
                        <tr>
                            <td>{{ regInfo.firstName }}</td>
                            <td>{{ regInfo.lastName }}</td>
                            <td>{{ regInfo.patronymic }}</td>
                            <td>{{ regInfo.phone }}</td>
                            <td>
                                <ul class="list-group">
                                    <li>
                                        <a href="{{ path('doctor_card', { 'actorId': regInfo.actorId.id }) }}">Картка</a>
                                    </li>
                                </ul>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}
    {% block javascripts %}
        {{ parent() }}
        <script src="https://cdn.datatables.net/1.10.11/js/jquery.dataTables.min.js"></script>
        <script>
            // $('.admin').DataTable();
            $('.doc_reg_info').DataTable({
                responsive: true
            });
        </script>
    {% endblock %}
