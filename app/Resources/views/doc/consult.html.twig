{% extends 'base.html.twig' %}
{% block stylesheets %}
    <link href="{{ asset('/bundles/framework/css/doctor.css') }}" rel="stylesheet"/>
{% endblock %}

{% block body %}
    {% include 'header.html.twig' %}
    <div class="col-md-3">
        <div class="panel panel-primary">
            <div class="panel-heading">
                <div class="col-md-offset-5">Дії</div>
            </div>
            <div class="panel-body">
                <ul class="list-group">
                    <li class="list-group-item">
                        <a href="{{ path('doctor') }}">На головну</a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
    <div class="col-md-6 col-md-offset-1">
        <div class="row">
                <div class="panel panel-default">
                    <div class="panel-heading"><div class="col-md-offset-5"><h3><small>Тип візиту: <b>{{ type }}</b></small></h3></div></div>
                    <div class="panel-body">
                        {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
                        {{ form_widget(form) }}
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('bundles/framework/js/jQuery/jquery-1.12.3.min.js') }}"></script>
    <script src="{{ asset('bundles/framework/js/upload.js') }}"></script>
{% endblock %}