{% extends 'base.html.twig' %}

{% block body %}
    {% include 'header.html.twig' %}
    <table>
        <tbody>
            <tr>
                <th>Дата</th>
                <td>{% if analysRe.date %}{{ analysRe.date|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Ім'я файлу</th>
                <td>{{ analysRe.filename }}</td>
            </tr>
        </tbody>
    </table>
    <div class="text-center">
        <ul class="list-group">
            <li>
                <a href="{{ path('laborant_index') }}" class="btn btn-default">Назад до списку</a>
            </li>
            <li>
                <a href="{{ path('laborant_edit', { 'id': analysRe.id }) }}"  class="btn btn-default">Редагувати</a>
            </li>
            <li>
                {{ form_start(delete_form) }}
                    <input type="submit" value="Видалити" class="btn btn-danger">
                {{ form_end(delete_form) }}
            </li>
        </ul>
    </div>
{% endblock %}
