{% extends 'base.html.twig' %}

{% block body %}
    {% include 'header.html.twig' %}
<div class="container-fluid">
    <div class="row">
        <div class="col-md-3">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <div class="col-md-offset-5">Дії</div>
                </div>
                <div class="panel-body">
                    <ul class="list-group">
                        <li class="list-group-item">
                            <a href="{{ path('reception_index') }}">Назад до списку</a>
                        </li>
                        <li class="list-group-item">
                            <a href="/reception/visits">Додати зустріч</a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="col-md-4 col-md-offset-1">
            <div class="panel panel-default">
                <div class="panel-heading"><img src="{{ asset('images/doc_reg.png') }}"></div>
                <div class="panel-body">
                    {{ form_start(form) }}
                    <div class="form-inline">
                        {{ form_row(form.beginTime) }}
                    </div>
                    <div class="form-inline">
                        {{ form_row(form.endTime) }}
                    </div>
                    {{ form_widget(form) }}
                    <div class="col-md-2 col-md-offset-5">
                        <input class="btn btn-success" type="submit" value="Ok"/>
                    </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
