{% extends 'base.html.twig' %}

{% block body %}
    <h1>RegInfo creation</h1>
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                <div class="row">
                    <div class="col-md-8 col-md-offset-2">
                        <div class="panel panel-default">
                            <div class="panel-heading"><i class="fa fa-male fa-3x"></i><i class="fa fa-child fa-2x"></i><i
                                        class="fa fa-female fa-3x"></i></div>
                            <div class="panel-body">
                                {{ form_start(form,  {'attr': {'novalidate': 'novalidate'}}) }}
                                {{ form_widget(form) }}
                                <input type="submit" value="Create" class="btn btn-default btn-sm"/>
                                {{ form_end(form) }}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <ul>
        <li>
            <a href="{{ path('reception_index') }}">Back to the list</a>
        </li>
    </ul>
{% endblock %}
