{% extends 'base.html.twig' %}
{% block stylesheets %}
    <link href="{{ asset('/bundles/framework/css/doctor.css') }}" rel="stylesheet"/>
    <link rel="stylesheet" href="https://cdn.datatables.net/1.10.11/css/jquery.dataTables.min.css"/>
    <link rel="stylesheet" href="https://cdn.datatables.net/1.10.11/css/dataTables.bootstrap.min.css"/>
    <style>
        .btn {
            width: 100%;
            margin-top: 15px;
        }
    </style>

{% endblock %}
{% block body %}
    {% include 'header.html.twig' %}
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-11 col-md-offset-1">
                <div class="col-md-3 col-md-offset-1">
                    <div class="thumbnail">
                        <img src="{{ asset('bundles/framework/images/new.png') }}"
                             class="img-thumbnail img-responsive">

                        <div class="caption">
                            <h3>Новий пацієнт</h3>

                            <p>Зареєструвати нового пацієнта</p>

                            <p><a href="{{ path('reception_new') }}" class="btn btn-success" role="button">Реєстрація</a></p>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="thumbnail">
                        <img src="{{ asset('bundles/framework/images/visit.png') }}"
                             class="img-thumbnail img-responsive">

                        <div class="caption">
                            <h3>Новий візит</h3>

                            <p>Записати пацієнта на прийом</p>

                            <p><a href="{{ path('reception_visits') }}" class="btn btn-success" role="button">Запис</a></p>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="thumbnail">
                        <img src="{{ asset('bundles/framework/images/search.png') }}" class="img-thumbnail img-responsive">

                        <div class="caption">
                            <h3>Пошук пацієнта</h3>

                            <p>Пошук пацієнтів у загальній базі</p>

                            <p><a href="{{ path('reception_all') }}" class="btn btn-big btn-success"
                                  role="button">Знайти</a>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

