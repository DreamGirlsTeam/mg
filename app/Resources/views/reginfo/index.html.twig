{% extends 'base.html.twig' %}
{% block stylesheets %}
    <link rel="stylesheet" href="https://cdn.datatables.net/1.10.11/css/jquery.dataTables.min.css"/>
{% endblock %}


{% block body %}

    <div class="container-fluid">
        <div class="row">
            <div class="col-md-11">
                <div class="alert alert-success">
                    <a href="{{ path('reception_new') }}">Create a new entry</a>
                </div>
                <table class="table table-hover reg_info">
                    <thead>
                    <tr>
                        <th>Firstname</th>
                        <th>Lastname</th>
                        <th>Patronymic</th>
                        <th>Birthday</th>
                        <th>Phone</th>
                        <th>Passport</th>
                        <th>Job</th>
                        <th>City</th>
                        <th>District</th>
                        <th>Email</th>
                        <th>Confidant</th>
                        <th>Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for regInfo in regInfos %}

                        <tr>
                            <td>{{ regInfo.firstName }}</td>
                            <td>{{ regInfo.lastName }}</td>
                            <td>{{ regInfo.patronymic }}</td>
                            <td>{% if regInfo.birthday %}{{ regInfo.birthday|date('Y-m-d') }}{% endif %}</td>
                            <td>{{ regInfo.phone }}</td>
                            <td>{{ regInfo.passport }}</td>
                            <td>{{ regInfo.job.name }}</td>
                            <td>{{ regInfo.city }}</td>
                            <td>{{ regInfo.district.name }}</td>
                            <td>{{ regInfo.email }}</td>
                            <td><a href="{{ path('reception_confidant_show', { 'actorId': regInfo.actorId.id }) }}">confidant</a>
                            </td>
                            <td>
                                <ul>
                                    <li>
                                        <a href="{{ path('reception_show', { 'actorId': regInfo.actorId.id }) }}">show</a>
                                    </li>
                                    <li>
                                        <a href="{{ path('reception_edit', { 'actorId': regInfo.actorId.id }) }}">edit</a>
                                    </li>
                                </ul>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>

{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script src="https://cdn.datatables.net/1.10.11/js/jquery.dataTables.min.js"></script>
    <script>
        // $('.admin').DataTable();
        $('.reg_info').DataTable({
            responsive: true
        });
    </script>
{% endblock %}
