{% extends 'base.html.twig' %}


{% block body %}
    {{ dump(regInfos) }}

        <div class="container-fluid">
            <div class="row">
                <div class="col-md-7 col-md-offset-2">
                    <div class="alert alert-success">
                        <a href="{{ path('reception_new') }}">Create a new entry</a>
                    </div>
                <table class="table table-hover">
                    <thead>
                    <tr>
                        <th>Id</th>
                        <th>Actorid</th>
                        <th>Firstname</th>
                        <th>Lastname</th>
                        <th>Patronymic</th>
                        <th>Birthday</th>
                        <th>Phone</th>
                        <th>Passport</th>
                        <th>Job</th>
                        <th>City</th>
                        <th>District</th>
                        <th>Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for regInfo in regInfos %}

                        <tr>
                            <td><a href="{{ path('reception_show', { 'actorId': regInfo.actorId.id }) }}">{{ regInfo.actorId.id }}</a></td>
                            <td>{{ regInfo.actorId.id }}</td>
                            <td>{{ regInfo.firstName }}</td>
                            <td>{{ regInfo.lastName }}</td>
                            <td>{{ regInfo.patronymic }}</td>
                            <td>{% if regInfo.birthday %}{{ regInfo.birthday|date('Y-m-d') }}{% endif %}</td>
                            <td>{{ regInfo.phone }}</td>
                            <td>{{ regInfo.passport }}</td>
                            <td>{{ regInfo.job.name }}</td>
                            <td>{{ regInfo.city }}</td>
                            <td>{{ regInfo.district.name }}</td>
                            <td>
                                <ul>
                                    <li>
                                        <a href="{{ path('reception_show', { 'actorId': regInfo.actorId.id }) }}">show</a>
                                    </li>
                                    <li>
                                        <a href="{{ path('reception_edit', { 'actorId': regInfo.actorId.id }) }}">edit</a>
                                    </li>
                                </ul>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>

{% endblock %}
