{% extends 'base.html.twig' %}
{% block stylesheets %}
    <link rel="stylesheet" href="https://cdn.datatables.net/1.10.11/css/jquery.dataTables.min.css"/>
{% endblock %}


{% block body %}
    {% include 'reginfo/header.html.twig' %}
    <div class="col-md-6 col-md-offset-3">
        <div class="container-fluid">
            <div class="row">
                <div class="well">
                    <h5 class="text-center"><a href="{{ path('reception_new') }}">Зареєструвати нового пацієнта</a></h5>
                </div>
                <table class="table table-hover reg_info">
                    <thead>
                    <tr>
                        <th>Ім'я</th>
                        <th>Прізвище</th>
                        <th>По-батькові</th>
                        <th>Довірена особа</th>
                        <th>Дії</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for regInfo in regInfos %}

                        <tr>
                            <td>{{ regInfo.firstName }}</td>
                            <td>{{ regInfo.lastName }}</td>
                            <td>{{ regInfo.patronymic }}</td>
                            <td><a href="{{ path('reception_confidant_show', { 'actorId': regInfo.actorId.id }) }}">Показати</a>
                            </td>
                            <td>
                                <ul class="list-group">
                                    <li>
                                        <a href="{{ path('reception_show', { 'actorId': regInfo.actorId.id }) }}">Переглянути</a>
                                    </li>
                                    <li>
                                        <a href="{{ path('reception_edit', { 'actorId': regInfo.actorId.id }) }}">Редагувати</a>
                                    </li>
                                </ul>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script src="https://cdn.datatables.net/1.10.11/js/jquery.dataTables.min.js"></script>
    <script>
        // $('.admin').DataTable();
        $('.reg_info').DataTable({
            responsive: true
        });
    </script>
{% endblock %}
